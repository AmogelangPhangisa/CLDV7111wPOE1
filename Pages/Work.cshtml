@page
@model WorkModel
@{
    ViewData["Title"] = "My work";
}

<div class="work">

    <!-- Products Section -->
    <div class="container mt-5">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-lg-6">
                <h1>Products</h1>
            </div>
            <div class="col-lg-6">
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam sit amet velit ut eros elementum ullamcorper a nec nunc. Suspendisse potenti. Nulla lacinia urna ac lorem feugiat, vel malesuada leo fermentum. Sed sit amet lectus ante. In hac habitasse platea dictumst.
                </p>
            </div>
        </div>

        <!-- Product Grid Section -->
        <div class="row mb-4">
            <div class="col-12 text-end mb-3">
                <input type="text" class="form-control w-25 d-inline" placeholder="Search">
            </div>

            <!-- Product Cards -->
            @for (int i = 0; i < 8; i++)  // Example loop for product cards
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img src="~/images/placeholder.png" class="card-img-top" alt="Product @i">
                        <div class="card-body">
                            <h5 class="card-title text-center">Featured Product</h5>
                        </div>
                    </div>
                </div>
            }

              <!-- Product Cards -->
        </div>
    </div>
    @await Html.PartialAsync("Shared/Components/_InfoBanner.cshtml")
    @await Html.PartialAsync("Shared/Components/_FeaturedInfo.cshtml")
    @await Html.PartialAsync("Shared/Components/_FeaturedItems.cshtml")
</div>
