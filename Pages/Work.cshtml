@page
@model WorkModel
@{
    ViewData["Title"] = "My work";
}

<div class="work">
    <!-- Products Section -->
    <div class="container mt-5">
        <!-- Header Section -->
     <div class="featured-info row my-5 p-5 align-items-center rounded-3 border shadow-lg"> 
    <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
        <h2 class="display-6 display-lg-5 fw-bold lh-1 mb-3 text-body-emphasis">Products</h2>
        <p class="fs-5 mb-3">
            Our merchandise is meticulously handcrafted by talented artisans from Southern Africa, using materials sourced locally. These unique items reflect the vibrant spirit and culture of our diverse nation. Each product we offer carries a distinctive African touch, yet appeals to a global audience.
        </p>
    </div>
     <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
        <img class="rounded-lg-3" src="/images/product-items.jpeg" alt="" height="50%" width="100%">
    </div>   
</div>
<div class="featured-info d-flex justify-content-center align-items-center flex-column py-5 my-5 rounded-4 border shadow-lg bg-light" style="width: 100%; max-width: 1200px; padding: 2rem;">
    <!-- Product Grid Section -->
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-end mb-3">
                <input type="text" class="form-control w-25 d-inline" placeholder="Search">
            </div>
  <!-- Separator Line -->
            <div class="w-100 border-top" style="border-top-color: black; margin: 2.5rem 0;"></div>
            <!-- Product Cards -->
            @for (int i = 0; i < 8; i++)  
            {
                <div class="col-lg-3 col-md-3 col-sm-6 mb-3">
                    <div class="card border-2 shadow-sm">
                        <img src="/images/product-items.jpeg" class="card-img-top" alt="Product @i">
                        <div class="card-body">
                            <h5 class="card-title">Handmade Craft</h5>
                            <p class="card-text">Art product made from real Black Sea shells, handmade. The craft is made from Ukrainian Crimea.</p>
                            <p class="card-text"><strong>Price:</strong>R2000</p>
                            <button class="btn btn-primary">Add to Card</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
       <!--Product Cards -->
        </div>
    </div>
    @await Html.PartialAsync("Shared/Components/_InfoBanner.cshtml")
   <!-- @await Html.PartialAsync("Shared/Components/_FeaturedInfo.cshtml") -->
  @await Html.PartialAsync("Shared/Components/_FeaturedItems.cshtml") 
</div>

